{
  "name": "dispersa-cli",
  "version": "0.1.0",
  "description": "Dispersa CLI",
  "type": "module",
  "bin": {
    "dispersa": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/config.d.ts",
        "default": "./dist/config.js"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "dispersa": "workspace:*",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
